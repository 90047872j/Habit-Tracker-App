<manifest package="com.example.juan.habittackerapp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.juan.habittackerapp.CatalogActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.juan.habittackerapp.EditorActivity"
            android:label="@string/editor_activity_title_new_routine"
            android:theme="@style/EditorTheme"
            android:parentActivityName="com.example.juan.habittackerapp.CatalogActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.juan.habittackerapp.CatalogActivity" />
        </activity>
    </application>

</manifest>